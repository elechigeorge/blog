<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main class="container">
        <div class="display-alert">

        </div>
        <h2>Here's our menu</h2>
        <p>
            <italic>make your choice, and we will make it come true</italic>
        </p>
        <hr />
        <div style="display: flex; flex-wrap: wrap; justify-content: space-around; height: 100px; ">
            <% blogs.forEach( blog => { %>
            <div class="card mt-2" style="width: 18rem; ">
                <img class="card-img-top" style="height: 120px;" src="/uploads/images/<%= blog.img %>"
                    alt="Card image cap">


                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>

                    <h3 class="card-text"><%= blog.price %></h3>
                    <hr />

                    <button type="button" class="btn btn-primary" onclick="sendItem('<%=blog.slug%>')">Order</button>

                </div>
            </div>
            <% }) %>
        </div>
    </main>


    <script src="/js/index.js"></script>
</body>

</html>